{
  "name": "Seed-Vault",
  "version": "1.0.0",
  "description": "Authentication system for Language Archive Seed-vault with unit tests",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest tests/unit/auth.test.js",
    "test:roles": "jest tests/unit/roleAccess.test.js",
    "dev": "node server.js" 
  },
  "dependencies": {
   
    "express": "^4.18.0",
    "bcrypt": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "@testing-library/jest-dom": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
